<h2>User Details</h2>

<dl class="dl-horizontal">
  <dt><strong>Full Name</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email Address</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">User does not have any stocks in their portfolio.</p>
<% end %>

<%= link_to "Back", friends_path, class: "btn btn-primary" %>
